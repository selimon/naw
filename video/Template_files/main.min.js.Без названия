$(".menu_btn").click(function(){$("#mobile_menu").addClass("active")}),$("#mobile_menu img").click(function(){$("#mobile_menu").removeClass("active")}),$("#team .item").hover(function(){$(this).toggleClass("active")}),$("#services .item .text_wrap .more").click(function(){$(this).closest(".item").find(".h_block").addClass("active")}),$("#services .item .h_block button").click(function(){$(this).closest(".h_block").removeClass("active")});